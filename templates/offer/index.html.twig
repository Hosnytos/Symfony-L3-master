{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des offres{% endblock %}

{% block body %}
<div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Liste des offres</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>À propos</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Abonnés</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers |sort((a,b) => b.relationSoOf|length <=> a.relationSoOf|length) %}
            <tr>
                <td>{{ offer.titre }}</td>
                <td>{{ offer.textintro }}</td>
                <td>{{ offer.textoffre }}</td>
                <td>{{ offer.prix }}€</td>
                <td>{{ offer.RelationSoOf|length }}</td>
                <td>
                    <a href="{{ path('offer_show', {'id': offer.id}) }}">Aperçu</a>
                    <a href="{{ path('offer_edit', {'id': offer.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune offre n'a été ajouté.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>
    <a class="btn btn-primary" href="{{ path('offer_new') }}">Ajouter une nouvelle offre</a>
    <br>
    <p></p>
{% endblock %}
