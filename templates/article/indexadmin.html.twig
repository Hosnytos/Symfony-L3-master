{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}
    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Liste des articles</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.created|date('d-m-Y') }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Aperçu</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article n'a été ajouté.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted ('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('article_new') }}">Ajouter un article</a>
        <br>
        <p></p>
    {% endif %}

{% endblock %}
