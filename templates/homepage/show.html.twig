{% extends 'public/layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
   
    <!-- section -->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="full text_align_right_img">
                        <img src="{{ asset('images/narutoRasengan.png') }}" alt="#" width="100%" height="100%"/>
                    </div>
                </div>
                <div class="col-md-6 layout_padding">
                    <div class="full paddding_left_15">
                        <div class="heading_main text_align_left">
                            <h2>{{ homepage.title }}</h2>
                        </div>
                    </div>
                    <div class="full paddding_left_15">
                        <p>{{ homepage.body }}</p>
                    </div>
                    <div class="full paddding_left_15">
                        <a class="main_bt" href="#">En savoir plus ></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end section -->



    <!-- section -->
    <div class="section layout_padding ">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="full paddding_left_15">
                        <div class="heading_main text_align_left">
                            <h2>{{ homepage.titleAbout }}</h2>
                        </div>
                    </div>
                    <div class="full paddding_left_15">
                        <p>{{ homepage.textAbout }}</p>
                    </div>
                    <div class="full paddding_left_15">
                        <a class="main_bt" href="#">Lire la suite ></a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="full text_align_right_img">
                        <img src="{{ asset('images/minatoRasengan.png') }}" alt="#" width="100%" height="100%"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end section -->



    {% if is_granted('ROLE_ADMIN') %}

        <a href="{{ path('homepage_index') }}">Liste des pages d'accueil</a>
        
    {% endif %}
{% endblock %}
