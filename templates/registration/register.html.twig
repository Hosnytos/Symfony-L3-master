{% extends 'public/layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="heading_main text_align_center">
        <h2><span class="theme_color"></span>Inscription</h2>
    </div>

    <div class=" text_align_right">
        <h4>* champs obligatoires</h4>
    </div>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.prenom, {label : 'Prénom *'} ) }}
        {{ form_row(registrationForm.nom, {label : 'Nom *'} ) }}
        {{ form_row(registrationForm.civilite, {label : 'Civilité *'} ) }}
        {{ form_row(registrationForm.datenaissance, {label : 'Date de naissance *'} ) }}
        {{ form_row(registrationForm.email, {label : 'Adresse mail *'} ) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.telephone, {label : 'Téléphone'} ) }}
        {{ form_row(registrationForm.ville, {label : 'Ville'} ) }}
        {{ form_row(registrationForm.codepostal, {label : 'Code postal'} ) }}
        {{ form_row(registrationForm.pays, {label : 'Pays'} ) }}
        {{ form_row(registrationForm.numsecu, {label : 'Numéro de sécurité sociale'} ) }}
        {{ form_row(registrationForm.agreeTerms, {label : 'Accepter les conditions générales d\'utilisation.'}) }}

        <button class="btn btn-lg btn-primary" type="submit">
            Valider
        </button>
    {{ form_end(registrationForm) }}

    <div class="alert alert-info my-3">
        <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous !</a> </p>
    </div>

{% endblock %}
