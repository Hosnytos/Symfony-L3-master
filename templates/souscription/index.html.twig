{% extends 'espace-agent/layout.html.twig' %}

{% block title %}Liste des souscriptions{% endblock %}

{% block body %}
<div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Liste des souscriptions</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Utilisateurs</th>
                <th>Offres</th>
                <th>État</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for souscription in souscriptions %}
            <tr>
                <td> {{ souscription.relationUsSo.email}} </td>
                <td> {{ souscription.relation.titre }} </td>
                <td>{{ souscription.etat }}</td>
                <td>
                    <a href="{{ path('souscription_edit', {'id': souscription.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune souscription n'a été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
